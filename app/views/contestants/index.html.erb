<%- if user_likes_page? -%>
	<section id="main-container">
		<section id="main-header">
			<h1>Carman Fiat Experience</h1>
			<%= header_img %>
		</section>
		<section id="main-content">
			<div class="row">
				<div class="span5">
					<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod 
					   tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, 
					   quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo 
					   consequat.</p>
				</div>
				<div class="span4">
					<h2>Help Your Friends Win!</h2>
				</div>
			</div>
		</section>
		<section id="giveaway-block">
			<div class="row">
				<div class="span4">
					<h2>You Could Win Awesome Prizes For Helping Your Friends</h2>
				</div>
				<div class="span6">
					<div id="myCarousel" class="carousel slide">
					  <!-- Carousel items -->
					  <div class="carousel-inner">
					    <div class="active item"><%= swagGear1 %></div>
					    <div class="item"><%= swagGear2 %></div>
					    <div class="item"><%= swagGear3 %></div>
					    <div class="item"><%= swagGear4 %></div>
					  </div>
					  <!-- Carousel nav -->
					  <a class="carousel-control left" href="#myCarousel" 
						 data-slide="prev">&lsaquo;</a>
					  <a class="carousel-control right" href="#myCarousel" 
						 data-slide="next">&rsaquo;</a>	
					</div>
				</div>
			</div>
		</section>
		<section id="footer-content">
			<div class="span3">
				
			</div>
			<div class="span7">
			  <div class="contestants">	
		      <% @contestants.each do |contestant| %>
			    <%= link_to image_tag(contestant.image_url), contestant %>
			    <%# link_to contestant.name, contestant, class: 'name' %>
			    <%# pluralize contestant.reputation_value_for(:votes).to_i, "vote" %>
				<%# if current_user && !current_user.voted_for?(contestant) %>
				  <%# link_to "vote", vote_contestant_path(contestant, type: "up"), 
					  method: "post", class: "btn btn-primary" %>
				  <%# end %>
		      <% end %>
		      </div>
			</div>
			
		</section>
<%- else -%>
	<!--
	<h1>Like This Page To Vote For Your Favorite Driver</h1>
	-->
<%- end -%>
	</section>


